{% extends 'base.html.twig' %}

{% block title %}Hello ProgramController!
{% endblock %}

{% block body %}
	<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>

	<div class="event-schedule-area-two bg-color pad100">
		<div
			class="container">

			<!-- row end-->
			<div class="row">
				<div class="col-lg-12">
					{# <ul class="nav custom-tab" id="myTab" role="tablist">
						{% for key, program in programs %}
							{% for dayNumber in range(1, program.daysNumber) %}
								
									<a class="nav-link active show" id="home-taThursday" href="{{ path('day_filter',{'id': dayNumber}) }}" role="tab" aria-selected="true">Day {{dayNumber}}</a>
								
							{% endfor %}
						{% endfor %}
					</ul> #}
					<div class="tab-content" id="myTabContent">
						<div class="tab-pane fade active show" id="home" role="tabpanel">
							<div class="table-responsive">
								<table class="table">
									<thead>
										<tr>
											<th class="text-center" scope="col">Date</th>
											<th scope="col">Show</th>
											<th scope="col">Exercise</th>
											<th scope="col">Duration</th>
											<th class="text-center" scope="col">Venue</th>
										</tr>
									</thead>
									<tbody>
										{% for key, dayStart in dayStarts %}
											<tr class="inner-box">
												<th scope="row">
													<div class="event-date">
														<span>16</span>
														<p>Novembar</p>
													</div>
												</th>
												<td>
													<div class="event-img">
														<img src="{{ asset('assets/images/exercises/' ~ dayStart.exercise.image) }}" alt=""/>
													</div>
												</td>
												<td>
													<div class="event-wrap">
														<h3>
															<a href="#">{{dayStart.exercise.name}}</a>
														</h3>
														<div class="meta">
															{# <div class="organizers">
																																																												<a href="#">Aslan Lingker</a>
																																																											</div> #}
															{# <div class="categories">
																																																												<a href="#">Inspire</a>
																																																											</div> #}
																<div class="time"> <span>{{ dayStart.sets }}
																	sets -
																	{{ dayStart.reps }}
																	reps
																</span>
															</div>
														</div>
													</div>
												</td>
												<td>
													<div class="r-no">
														<span>10mn</span>
													</div>
												</td>
												<td>
													<div class="primary-btn">
														<div class="container">
															<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#form">
																Go!
															</button>
														</div>

														<div class="modal fade" id="form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
															<div class="modal-dialog modal-dialog-centered" role="document">
																<div class="modal-content">
																	<div class="modal-header border-bottom-0">
																		<h5 class="modal-title" id="exampleModalLabel">Create Account</h5>
																		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
																			<span aria-hidden="true">&times;</span>
																		</button>
																	</div>
																	<form>
																		<div class="modal-body">
																			<div class="form-group">
																				<label for="idSets">Sets</label>
																				<input type="number" class="form-control" id="idSets">
																			</div>
																			<div class="form-group">
																				<label for="idReps">Sets</label>
																				<input type="number" class="form-control" id="idReps">
																			</div>

																		</div>
																		<div class="modal-footer border-top-0 d-flex justify-content-center">
																			<button type="submit" class="btn btn-success">save</button>
																		</div>
																	</form>
																</div>
															</div>
														</div>
													</div>
												</td>
											</tr>
										{% endfor %}

									</tbody>
								</table>

							</div>
						</div>


						<div class="primary-btn text-center">
							<a href="#" class="btn btn-primary">End day</a>
						</div>
					</div>
					<!-- /col end-->
				</div>
				<!-- /row end-->
			</div>
		</div>
		<style>
			body {
				margin-top: 20px;
			}
			.event-schedule-area .section-title .title-text {
				margin-bottom: 50px;
			}

